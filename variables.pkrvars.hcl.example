# Variables for Packer
linode_instance = {
    region              = "fr-par"
    instance_type       = "g6-nanode-1"
    instance_label      = "packer-ubuntu24.04"
    image               = "linode/ubuntu24.04"
    image_label         = "ubuntu24.04-acc-packer-image-${local.timestamp}"
    image_description   = "ubuntu24.04 - ACC Packer Image"
    linode_tags         = ["ubuntu24.04", "packer"]
    private_ip          = false
    firewall_id         = "123456"
}

# Enable cloud-init modules
cloud_init = {
    apt = true
    ca_certs = false # Not required in most cases
    etc_hosts = true
    final_message = true
    groups = true
    packages = true
    runcmd = true
    seed_random = true
    set_hostname = false # Not advisable in most cases
    snap = true
    ssh = true
    timezone = true
    ubuntu_drivers = false # Not required in most cases
    update_hostname = false # Not advisable in most cases
    users = true
}